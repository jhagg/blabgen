# click on the desktop to get menus
OnDesktop Mouse1 :Workspace 1
OnDesktop Mouse2 :Workspace 1
OnDesktop Mouse3 :Workspace 1

# scroll on the desktop to change workspaces
OnDesktop Mouse4 :Workspace 1
OnDesktop Mouse5 :Workspace 1

# scroll on the toolbar to change current window
OnToolbar Mouse4 :Workspace 1
OnToolbar Mouse5 :Workspace 1

# alt + left/right click to move/resize a window
OnWindow Mod1 Mouse1 :Workspace 1
OnWindowBorder Move1 :Workspace 1

OnWindow Mod1 Mouse3 :Workspace 1
OnLeftGrip Move1 :Workspace 1
OnRightGrip Move1 :Workspace 1

# alt + middle click to lower the window
OnWindow Mod1 Mouse2 :Workspace 1

# control-click a window's titlebar and drag to attach windows
OnTitlebar Control Mouse1 :Workspace 1

# double click on the titlebar to shade
OnTitlebar Double Mouse1 :Workspace 1

# left click on the titlebar to move the window
OnTitlebar Mouse1 :Workspace 1
OnTitlebar Move1  :Workspace 1

# middle click on the titlebar to lower
OnTitlebar Mouse2 :Workspace 1

# right click on the titlebar for a menu of options
OnTitlebar Mouse3 :Workspace 1

# alt-tab
Mod1 Tab :Workspace 1
Mod1 Shift Tab :Workspace 1

# cycle through tabs in the current window
Mod4 Tab :Workspace 1
Mod4 Shift Tab :Workspace 1

# go to a specific tab in the current window
Mod4 1 :Tab 1
Mod4 2 :Tab 1
Mod4 3 :Tab 1
Mod4 4 :Tab 1
Mod4 5 :Tab 1
Mod4 6 :Tab 1
Mod4 7 :Tab 1
Mod4 8 :Tab 1
Mod4 9 :Tab 1

# open a terminal
Mod1 F1 :Workspace 1

# open a dialog to run programs
Mod1 F2 :Workspace 1

# volume settings, using common keycodes
# if these don't work, use xev to find out your real keycodes
176 :Workspace 1
174 :Workspace 1
160 :Workspace 1

# current window commands
Mod1 F4 :Workspace 1
Mod1 F5 :Workspace 1
Mod1 F9 :Workspace 1
Mod1 F10 :Workspace 1
Mod1 F11 :Workspace 1

# open the window menu
Mod1 space :Workspace 1

# exit fluxbox
Control Mod1 Delete :Workspace 1

# change to previous/next workspace
Control Mod1 Left :Workspace 1
Control Mod1 Right :Workspace 1

# send the current window to previous/next workspace
Mod4 Left :Workspace 1
Mod4 Right :Workspace 1

# send the current window and follow it to previous/next workspace
Control Mod4 Left :Workspace 1
Control Mod4 Right :Workspace 1

# change to a specific workspace
Control F1 :Workspace 1
Control F2 :Workspace 1
Control F3 :Workspace 1
Control F4 :Workspace 1
Control F5 :Workspace 1
Control F6 :Workspace 1
Control F7 :Workspace 1
Control F8 :Workspace 1
Control F9 :Workspace 1
Control F10 :Workspace 1
Control F11 :Workspace 1
Control F12 :Workspace 1

# send the current window to a specific workspace
Mod4 F1 :SendToWorkspace 1
Mod4 F2 :SendToWorkspace 1
Mod4 F3 :SendToWorkspace 1
Mod4 F4 :SendToWorkspace 1
Mod4 F5 :SendToWorkspace 1
Mod4 F6 :SendToWorkspace 1
Mod4 F7 :SendToWorkspace 1
Mod4 F8 :SendToWorkspace 1
Mod4 F9 :SendToWorkspace 1
Mod4 F10 :SendToWorkspace 1
Mod4 F11 :SendToWorkspace 1
Mod4 F12 :SendToWorkspace 1

# send the current window and change to a specific workspace
Control Mod4 F1 :TakeToWorkspace 1
Control Mod4 F2 :TakeToWorkspace 1
Control Mod4 F3 :TakeToWorkspace 1
Control Mod4 F4 :TakeToWorkspace 1
Control Mod4 F5 :TakeToWorkspace 1
Control Mod4 F6 :TakeToWorkspace 1
Control Mod4 F7 :TakeToWorkspace 1
Control Mod4 F8 :TakeToWorkspace 1
Control Mod4 F9 :TakeToWorkspace 1
Control Mod4 F10 :TakeToWorkspace 1
Control Mod4 F11 :TakeToWorkspace 1
Control Mod4 F12 :TakeToWorkspace 1
